extends ../base
include ../mixins/video

block content 
    div.profile__data
        if loggedInUser.avatarUrl === undefined || loggedInUser.avatarUrl === ""
            span 🙍‍♂️
        else 
            if loggedInUser.avatarUrl.includes("github")
                img.header__avatar(src=loggedInUser.avatarUrl,crossorigin)
            else 
                img.header__avatar(src="/" + loggedInUser.avatarUrl)
        //- img(src="/" + user.avatarUrl).avatar
        h3=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found 